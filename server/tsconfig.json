{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@/routes/*": ["src/routes/*"],
        "@/middleware/*": ["src/middleware/*"],
        "@/controllers/*": ["src/controllers/*"],
        "@/services/*": ["src/services/*"],
        "@/utils/*": ["src/utils/*"]
      },
    },
    "include": ["src/**/*"],
  }